<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners
                android:radius="5dp">
            </corners>
            <stroke
                android:width="1dp"
                android:color="@color/gray">
            </stroke>
        </shape>
    </item>

    <item >
        <shape>
            <solid android:color="#e85e13" />
            <corners
                android:radius="5dp">
            </corners>
            <gradient
                android:startColor="#fff"
                android:endColor="@color/gray"
                android:angle="270">
            </gradient>
            <stroke
                android:width="1dp"
                android:color="@color/black_base">
            </stroke>
        </shape>
    </item>

</selector>