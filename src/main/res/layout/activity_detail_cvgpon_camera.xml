<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true">

    <include
        android:id="@+id/lnHeader"
        layout="@layout/header_cancel_save_back_layout" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/lnFooterStoping"
        android:layout_below="@+id/lnHeader">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_52"
                android:gravity="center_vertical"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/BlackText_medium_bold"
                        android:layout_width="140dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Tiến độ : (%)"
                        android:textColor="@android:color/black" />

                    <RelativeLayout
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dimen_4"
                        android:layout_marginLeft="@dimen/dimen_16"
                        android:background="@drawable/background_text_gpon">

                        <TextView
                            android:id="@+id/txt_process"
                            style="@style/BlackText_medium_bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="0"
                            android:textColor="@color/black" />
                    </RelativeLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/btnSelectImage"
                    android:layout_width="@dimen/dimen_32"
                    android:layout_height="@dimen/dimen_32"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:scaleType="fitXY"
                    android:layout_marginRight="40dp"
                    android:src="@drawable/ic_action_photolibrary" />

                <ImageView
                    android:id="@+id/btn_camera"
                    android:layout_width="@dimen/dimen_32"
                    android:layout_height="@dimen/dimen_32"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_camera" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1"
                android:background="@color/grey1" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    style="@style/BlackText_medium"
                    android:layout_width="140dp"
                    android:layout_height="32dp"
                    android:gravity="center_vertical"
                    android:text="Nội dung"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_content_cv_in_process"
                    style="@style/BlackText_medium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="..." />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    style="@style/BlackText_medium"
                    android:layout_width="140dp"
                    android:layout_height="32dp"
                    android:gravity="center_vertical"
                    android:text="Công trình"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_construction_name_in_process"
                    style="@style/BlackText_medium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="..." />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    style="@style/BlackText_medium"
                    android:layout_width="140dp"
                    android:layout_height="32dp"
                    android:gravity="center_vertical"
                    android:text="Hạng mục"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_category_name_in_process"
                    style="@style/BlackText_medium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="..." />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1"
                android:background="@color/grey1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:id="@+id/txt_titleSum"
                    style="@style/BlackText_medium"
                    android:layout_width="140dp"
                    android:layout_height="32dp"
                    android:gravity="center_vertical"
                    android:text="Tổng tuyến"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_sum"
                    style="@style/BlackText_medium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="..." />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1"
                android:background="@color/grey1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    style="@style/BlackText_medium"
                    android:layout_width="140dp"
                    android:layout_height="32dp"
                    android:gravity="center_vertical"
                    android:text="Đã thi công"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_do_work"
                    style="@style/BlackText_medium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="..." />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1"
                android:background="@color/grey1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    style="@style/BlackText_medium"
                    android:layout_width="120dp"
                    android:layout_height="32dp"
                    android:gravity="center_vertical"
                    android:text="Thời gian"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_time_do_work"
                    style="@style/BlackText_medium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="..." />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1"
                android:background="@color/grey1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title_todowork"
                    style="@style/BlackText_medium"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_vertical"
                    android:text="Khối lương (m): "
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/ed_todowork"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:inputType="numberDecimal"
                    android:text="0"
                    android:textColor="@color/black" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1"
                android:background="@color/grey1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    style="@style/BlackText_medium"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Giá trị sản lượng (VND):"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_text_gpon">

                    <TextView
                        android:id="@+id/tv_giatri"
                        style="@style/BlackText_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="150000" />
                </RelativeLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1"
                android:background="@color/grey1" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_list_image_in_process"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_80"
                android:layout_marginLeft="@dimen/dimen_8"
                android:layout_marginTop="16dp"
                android:layout_marginRight="@dimen/dimen_8"
                android:layout_marginBottom="@dimen/dimen_4"
                android:scrollbarSize="5dp"
                android:scrollbarThumbHorizontal="@drawable/shape_scrollbar"
                android:scrollbars="horizontal" />


        </LinearLayout>
    </ScrollView>

    <com.viettel.construction.screens.custom.dialog.CustomProgress
        android:id="@+id/prg_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:id="@+id/lnFooterStoping"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_44"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/btn_stop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/img_status"
                android:layout_width="@dimen/dimen_52"
                android:layout_height="@dimen/dimen_52"
                android:layout_gravity="center"
                android:padding="@dimen/dimen_8"
                android:src="@drawable/ic_stop_signal" />

            <TextView
                android:id="@+id/txt_status"
                style="@style/BlackText_medium"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Tạm dừng" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
