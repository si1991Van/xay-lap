<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/white">

    <include
        android:id="@+id/lnHeader"
        layout="@layout/header_cancel_save_layout"
         />


    <ScrollView
        android:layout_above="@+id/lnFooterStoping"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lnHeader">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_52"
                android:gravity="center_vertical"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/BlackText_medium_bold"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Tiến độ"
                        android:textColor="@android:color/black" />

                    <EditText
                        android:id="@+id/edt_process"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dimen_32"
                        android:background="#FFF"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="left|center_vertical"
                        android:inputType="numberDecimal"
                        android:paddingLeft="@dimen/dimen_4"
                        android:text="0"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dimen_32"
                        android:gravity="left|center_vertical"
                        android:text="%"
                        android:textColor="@color/black" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/btnSelectImage"
                    android:layout_width="@dimen/dimen_32"
                    android:layout_height="@dimen/dimen_32"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:scaleType="fitXY"
                    android:layout_marginRight="40dp"
                    android:src="@drawable/ic_action_photolibrary" />
                <ImageView
                    android:id="@+id/btn_camera"
                    android:layout_width="@dimen/dimen_32"
                    android:layout_height="@dimen/dimen_32"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_camera" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1"
                android:background="@color/grey1" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    style="@style/BlackText_medium"
                    android:layout_width="100dp"
                    android:layout_height="32dp"
                    android:gravity="center_vertical"
                    android:text="Nội dung"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_content_cv_in_process"
                    style="@style/BlackText_medium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="..." />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1"
                android:background="@color/grey1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    style="@style/BlackText_medium"
                    android:layout_width="100dp"
                    android:layout_height="32dp"
                    android:gravity="center_vertical"
                    android:text="Công trình"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_construction_name_in_process"
                    style="@style/BlackText_medium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="..." />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1"
                android:background="@color/grey1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    style="@style/BlackText_medium"
                    android:layout_width="100dp"
                    android:layout_height="32dp"
                    android:gravity="center_vertical"
                    android:text="Hạng mục"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_category_name_in_process"
                    style="@style/BlackText_medium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="..." />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1"
                android:background="@color/grey1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    style="@style/BlackText_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Thời gian theo KH "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_estimate_time_in_process"
                    style="@style/BlackText_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1"
                android:background="@color/grey1" />

            <TextView
                android:id="@+id/tv"
                style="@style/BlackText_medium"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="4dp"
                android:text="Hình thức thi công"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/lnHinhThucTC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"

                android:gravity="center_vertical">


                <Spinner
                    android:id="@+id/spn_construction"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_spinner" />

                <ImageView
                    android:id="@+id/btn_add"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_centerInParent="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@drawable/icon_add" />
            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_construction_spn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="80dp"
                android:paddingBottom="@dimen/dimen_4"
                android:paddingLeft="@dimen/dimen_4"
                android:paddingRight="@dimen/dimen_4"
                android:scrollbarSize="5dp"
                android:scrollbarThumbVertical="@drawable/shape_scrollbar"
                android:scrollbars="vertical" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_list_image_in_process"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_80"
                android:layout_marginBottom="@dimen/dimen_4"
                android:layout_marginLeft="@dimen/dimen_8"
                android:layout_marginRight="@dimen/dimen_8"
                android:layout_marginTop="16dp"
                android:scrollbarSize="5dp"
                android:scrollbarThumbHorizontal="@drawable/shape_scrollbar"
                android:scrollbars="horizontal" />

        </LinearLayout>
    </ScrollView>

    <com.viettel.construction.screens.custom.dialog.CustomProgress
        android:id="@+id/prg_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:id="@+id/lnFooterStoping"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_44"
        android:layout_margin="8dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/btn_stop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/img_status"
                android:layout_width="@dimen/dimen_52"
                android:layout_height="@dimen/dimen_52"
                android:layout_gravity="center"
                android:padding="@dimen/dimen_8"
                android:src="@drawable/ic_stop_signal" />

            <TextView
                android:id="@+id/txt_status"
                style="@style/BlackText_medium"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Tạm dừng" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
