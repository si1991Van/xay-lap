<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@color/grey1"
android:paddingBottom="4dp"
android:paddingLeft="4dp"
android:paddingRight="4dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/recyclerview_item"
    android:orientation="vertical"
    android:padding="@dimen/dimen_8">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:orientation="horizontal">

        <TextView
            style="@style/BlackText_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/categories" />

        <TextView
            android:id="@+id/tv_category"
            style="@style/BlackText_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:ellipsize="end"
            android:maxLines="2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_4"
        android:orientation="horizontal">

        <TextView
            style="@style/BlackText_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/schedule" />

        <TextView
            android:id="@+id/tv_progress"
            style="@style/BlackText_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:ellipsize="end"
            android:maxLines="2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_4"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_per_in_charge"
            style="@style/BlackText_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/person_in_charge" />

        <TextView
            android:id="@+id/tv_performer"
            style="@style/BlackText_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:ellipsize="end"
            android:maxLines="2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="@dimen/dimen_4"
        android:orientation="horizontal">

        <TextView
            style="@style/BlackText_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/status" />

        <TextView
            android:id="@+id/tv_status"
            style="@style/BlackText_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:ellipsize="end"
            android:maxLines="2" />

    </LinearLayout>

</LinearLayout>


<ImageView
    android:id="@+id/imv_warning"
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp"
    android:visibility="invisible"
    android:layout_gravity="center_vertical"
    android:layout_alignParentRight="true"
    android:src="@drawable/ic_warning" />

<ImageView
    android:layout_width="24dp"
    android:layout_height="32dp"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:layout_marginRight="@dimen/dimen_4"
    android:src="@drawable/ic_greater" />

</RelativeLayout>