<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@color/c5"
        android:gravity="center">

        <!--<TextView-->
        <!--android:id="@+id/txt_cancel"-->
        <!--style="@style/WhiteText_medium"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_marginLeft="@dimen/dimen_8"-->
        <!--android:text="Hủy" />-->

        <!--<TextView-->
        <!--style="@style/WhiteText_medium"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_marginRight="@dimen/dimen_8"-->
        <!--android:text="Lưu" />-->

        <TextView
            style="@style/WhiteText_large_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/create_new_cv" />

    </RelativeLayout>

    <TextView
        style="@style/BlackText_large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_2"
        android:layout_marginLeft="@dimen/dimen_4"
        android:layout_marginTop="@dimen/dimen_2"
        android:text="@string/work" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:background="@android:color/darker_gray" />

    <EditText
        android:inputType="text"
        android:imeOptions="actionDone"
        android:id="@+id/edt_content_work"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_128"
        android:layout_marginLeft="@dimen/dimen_8"
        android:layout_marginRight="@dimen/dimen_8"
        android:background="@null"
        android:gravity="left|top"
        android:hint="@string/input_content_work"
        android:padding="@dimen/dimen_4"
        android:scrollbarSize="5dp"
        android:scrollbars="vertical" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            style="@style/BlackText_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_2"
            android:layout_marginLeft="@dimen/dimen_4"
            android:layout_marginTop="@dimen/dimen_2"
            android:text="@string/person_in_charge" />

        <RelativeLayout
            android:id="@+id/imv_performer"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_32">

            <TextView
                android:id="@+id/tv_performer"
                style="@style/BlackText_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dimen_4"
                android:hint="@string/please_choose" />

            <ImageView
                android:layout_width="@dimen/dimen_20"
                android:layout_height="@dimen/dimen_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_8"
                android:scaleType="fitXY"
                android:src="@drawable/ic_pencil" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />


        <TextView
            style="@style/BlackText_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_2"
            android:layout_marginLeft="@dimen/dimen_4"
            android:layout_marginTop="@dimen/dimen_2"
            android:text="@string/from_day" />

        <RelativeLayout
            android:id="@+id/imv_calendar1"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_32">

            <TextView
                android:id="@+id/tv_start_time_complete"
                style="@style/BlackText_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dimen_4"
                android:hint="@string/please_choose" />

            <ImageView
                android:layout_width="@dimen/dimen_20"
                android:layout_height="@dimen/dimen_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_8"
                android:scaleType="fitXY"
                android:src="@drawable/ic_calendar" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />


        <TextView
            style="@style/BlackText_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_2"
            android:layout_marginLeft="@dimen/dimen_4"
            android:layout_marginTop="@dimen/dimen_2"
            android:text="@string/to_day" />

        <RelativeLayout
            android:id="@+id/imv_calendar2"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_32">

            <TextView
                android:id="@+id/tv_finish_time_complete"
                style="@style/BlackText_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dimen_4"
                android:hint="@string/please_choose" />

            <ImageView
                android:layout_width="@dimen/dimen_20"
                android:layout_height="@dimen/dimen_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_8"
                android:scaleType="fitXY"
                android:src="@drawable/ic_calendar" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1"
                android:layout_alignParentBottom="true"
                android:background="@android:color/darker_gray" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/txt_cancel"
            style="@style/WhiteText_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_8"
            android:text="Hủy"
            android:textColor="@color/c5" />

        <TextView
            android:id="@+id/btn_save"
            android:background="?android:attr/selectableItemBackground"
            style="@style/WhiteText_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_8"
            android:text="Lưu"
            android:textColor="@color/c5" />

    </RelativeLayout>

</LinearLayout>