<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical">


    <include layout="@layout/header_cancel_save_layout" />

    <TextView
        style="@style/BlackText_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Nội dung phản ảnh"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/edt_content_reflect"
        style="@style/BlackText_small"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/border_dashboard"
        android:gravity="top"
        android:padding="6dp"
        android:textColor="@color/black">

        <requestFocus />
    </EditText>


    <TextView
        style="@style/BlackText_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Nội dung xử lý"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/edt_content_handing"
        style="@style/BlackText_small"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/border_dashboard"
        android:gravity="top"
        android:padding="6dp"
        android:textColor="@color/black" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            style="@style/BlackText_medium"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Người xử lý"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/BlackText_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_4"
            android:layout_marginRight="4dp"
            android:text=" Lê Văn Đoàn" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            style="@style/BlackText_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:text="Công trình"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_construction"
            style="@style/BlackText_medium"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawableRight="@drawable/ic_pencil"
            android:gravity="center_vertical"
            android:hint="Chọn công trình" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            style="@style/BlackText_medium"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Hạng mục"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_item"
            style="@style/BlackText_medium"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawableRight="@drawable/ic_pencil"
            android:gravity="center_vertical"
            android:hint="Chọn hạng mục" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey1" />

    <RadioGroup
        android:id="@+id/rb_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rb1"
            style="@style/BlackText_medium"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_16"
            android:layout_weight="1"
            android:text="Chuyển bộ phận điều hành" />

        <RadioButton
            android:id="@+id/rb2"
            style="@style/BlackText_medium"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_16"
            android:layout_weight="1"
            android:text="Mở phản ánh" />

        <RadioButton
            android:id="@+id/rb3"
            style="@style/BlackText_medium"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_16"
            android:layout_weight="1"
            android:text="Đóng phản ánh" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />

    </RadioGroup>


</LinearLayout>