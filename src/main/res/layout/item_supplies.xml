<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_85"
    android:paddingTop="@dimen/dimen_8"
    android:layout_margin="0.5dp"
    android:orientation="vertical"
    android:background="@color/colorWhite">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_postion"
            style="@style/BlackText_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dimen_16"
            android:text="1." />

        <TextView
            android:id="@+id/tv_name"
            style="@style/BlackText_medium"
            android:maxLines="2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_8" />

        <TextView
            android:gravity="right"
            android:textSize="18sp"
            android:layout_marginRight="@dimen/dimen_16"
            android:id="@+id/tv_number_1"
            android:layout_width="@dimen/dimen_64"
            android:layout_height="wrap_content"
            android:text="10"
            android:textColor="@android:color/holo_red_light" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/c2"
            android:layout_marginLeft="@dimen/dimen_37"
            style="@style/BlackText_medium"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Số lượng nghiệm thu" />

        <EditText
            android:id="@+id/edt_number_real"
            android:layout_width="@dimen/dimen_64"
            android:layout_height="@dimen/dimen_32"
            android:layout_marginRight="@dimen/dimen_8"
            android:background="@drawable/shape_bgr_edt"
            android:gravity="right"
            android:hint="0"
            android:inputType="numberDecimal"
            android:paddingRight="@dimen/dimen_8" />

    </LinearLayout>

</LinearLayout>