<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:id="@+id/ln_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_postion"
            style="@style/BlackText_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_16"
            android:text="1." />

        <TextView
            android:id="@+id/tv_name"
            style="@style/BlackText_medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_8"
            android:layout_weight="1" />


        <TextView
            android:id="@+id/tv_number"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:maxLines="1"
            android:layout_marginRight="@dimen/dimen_25"
            android:textColor="@color/black_base"
            android:textSize="18sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_code"
        style="@style/BlackText_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_35" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_item"
        android:layout_marginTop="@dimen/dimen_5"
        android:layout_below="@+id/tv_code"
        android:layout_marginLeft="@dimen/dimen_40"
        android:layout_marginRight="@dimen/dimen_15"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>