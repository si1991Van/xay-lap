<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey1"
    android:paddingBottom="4dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/recyclerview_item"
        android:orientation="vertical"
        android:padding="@dimen/dimen_4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="@dimen/dimen_4"
            android:orientation="horizontal">

            <TextView
                style="@style/BlackText_medium_bold"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="@string/content_with" />

            <TextView
                android:id="@+id/tv_content"
                style="@style/BlackText_medium_bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="@dimen/dimen_4"
            android:orientation="horizontal">

            <TextView
                style="@style/BlackText_small"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="@string/construction_code" />

            <TextView
                android:id="@+id/tv_id"
                style="@style/BlackText_small"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_4"
            android:layout_marginLeft="4dp"
            android:orientation="horizontal">

            <TextView
                style="@style/BlackText_small"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="@string/status" />

            <TextView
                android:id="@+id/tv_status"
                style="@style/BlackText_small"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ellipsize="end"
                android:maxLines="2" />


        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_4"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_greater" />

</RelativeLayout>