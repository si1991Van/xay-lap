<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical">

    <include layout="@layout/header_cancel_save_layout" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            style="@style/BlackText_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Công trình"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_construction"
            style="@style/BlackText_medium"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawableRight="@drawable/ic_pencil"
            android:gravity="center_vertical"
            android:hint="Chọn công trình"
            android:paddingRight="@dimen/dimen_8" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">


        <TextView
            style="@style/BlackText_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hạng mục"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_category"
            style="@style/BlackText_medium"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawableRight="@drawable/ic_pencil"
            android:gravity="center_vertical"
            android:hint="Chọn hạng mục" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            style="@style/BlackText_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nội dung phản ảnh"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/edt_content"
            style="@style/BlackText_medium"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="top"
            android:padding="4dp"
            android:background="@drawable/border_dashboard"
            android:inputType="textMultiLine"
            android:textColor="@color/black" />


    </LinearLayout>

</LinearLayout>